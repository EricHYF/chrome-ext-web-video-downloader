{
  "manifest_version": 3,
  "name": "网页视频下载器",
  "version": "1.0.0",
  "description": "检测并下载网页中的视频流，支持转换为MP4格式",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "webRequest"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "hls-downloader.js", "blob-downloader.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "视频下载器"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "hls-downloader.js", "blob-downloader.js"],
      "matches": ["<all_urls>"]
    }
  ]
}